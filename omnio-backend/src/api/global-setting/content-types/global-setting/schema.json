{
  "kind": "singleType",
  "collectionName": "global_settings",
  "info": {
    "singularName": "global-setting",
    "pluralName": "global-settings",
    "displayName": "Global Settings",
    "description": "Site-wide configuration including branding, SEO defaults, and navigation"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "defaultSeo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "header": {
      "type": "component",
      "repeatable": false,
      "component": "structure.header"
    },
    "footer": {
      "type": "component",
      "repeatable": false,
      "component": "structure.footer"
    },
    "contactEmail": {
      "type": "email",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "contactPhone": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}
